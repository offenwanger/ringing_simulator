{
  "name": "RingingRoom Simulator",
  "description": "Simulate Changes",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
      "default_title": "Ring a change",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_scripts": [{ 
        "js": [ "main.js" ], 
        "matches": [ 
            "http://na.ringingroom.com/*", 
            "https://na.ringingroom.com/*",
            "http://ringingroom.com/*", 
            "https://ringingroom.com/*"
        ] 
    }]
}
